<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <aenu.aps3e.GameFrameView
            android:id="@+id/emulator_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
            
        <org.vita3k.emulator.overlay.InputOverlay
            android:id="@+id/game_pad"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#E6101010"
        android:orientation="vertical"
        android:padding="20dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APS3E MALI CONSOLE"
            android:textColor="#00FBFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="30dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/toggle_turbo_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turbo Mode (Uncap)"
            android:textColor="#FFFFFF"
            android:paddingVertical="10dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/toggle_fps_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPU Detailed Stats"
            android:textColor="#FFFFFF"
            android:paddingVertical="10dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btn_memory_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memory Searcher"
            android:backgroundTint="#333333"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit Emulator"
            android:layout_marginTop="10dp"
            android:backgroundTint="#8B0000"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#44FFFFFF"
            android:layout_marginVertical="25dp" />

        <ScrollView
            android:id="@+id/log_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#000000">
            
            <TextView
                android:id="@+id/log_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[Mali-G710 Driver Ready]\n"
                android:textColor="#00FF41"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:padding="8dp" />
        </ScrollView>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
